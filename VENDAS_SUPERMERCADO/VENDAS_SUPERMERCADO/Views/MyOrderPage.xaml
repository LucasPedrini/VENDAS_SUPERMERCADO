<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:VENDAS_SUPERMERCADO.ViewModels"
             x:Class="VENDAS_SUPERMERCADO.Views.MyOrderPage" Title="Meus Pedidos">
    <ContentPage.BindingContext>
        <vm:ItemsOrderViewModel/>
    </ContentPage.BindingContext>
    <StackLayout BackgroundColor="White">

        
    <ListView
            Margin="0,10,0,0"
             HeightRequest="303"
            BackgroundColor="White"
                HasUnevenRows="True"
                ItemsSource="{Binding AllOrdersList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="280"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="1" Grid.Column="0" Margin="15,-48,0,0" FontSize="14" Text="{Binding valor_total_pedido, StringFormat='Valor Total do pedido: R${0:F2}'}" FontAttributes="None" TextColor="Red" VerticalOptions="Center"></Label>
                            <Label Grid.Row="2" Grid.Column="0" Text="{Binding pagamento, StringFormat='Forma de Pagamento: {0}'}" Margin="15,-18,0,20" FontSize="14" TextColor="Black" FontAttributes="None" VerticalOptions="End"></Label>
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding data, StringFormat='Data do Pedido: {0}'}" Margin="15,0,0,0" FontAttributes="None" TextColor="Green"></Label>
                            <Button Grid.Row="0" Grid.Column="1" Margin="5,15,0,0" TextColor="White" BackgroundColor="LightSlateGray" CornerRadius="9" FontSize="12" HeightRequest="35" FontAttributes="None" TextTransform="None" BorderWidth="2" BorderColor="Black" Text="VER DETALHES" BindingContext="{Binding .}" Clicked="Button_Clicked"></Button>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>