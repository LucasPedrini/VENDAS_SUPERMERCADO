<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VENDAS_SUPERMERCADO.Views.MenuView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Produtos" Order="Primary" Priority="0"
                     Command="{Binding ProductCommand}"/>
        <ToolbarItem Name="Cart" Order="Primary" Priority="1"
                     Command="{Binding MyCartCommand}"/>
        <ToolbarItem Name="Pedidos" Order="Primary" Priority="2"
                     Command="{Binding MyOrderCommand}"/>
        <ToolbarItem Name="Perfil" Order="Primary" Priority="3" 
                     Command="{Binding UserProfileCommand}"/>
        <ToolbarItem Name="Sair" Order="Primary" Priority="4" 
                     Command="{Binding LogoutCommand}"/>
    </ContentPage.ToolbarItems>
</ContentPage>